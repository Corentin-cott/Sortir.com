{% extends 'base.html.twig' %}

{% block title %}Home | {{ parent() }} {% endblock %}

{% block body %}

<div class="body-container">

    {% if result is defined %}
        <div class="recherche-sortie-form">
            <h2>Résultat de l'import</h2>
            <p style="margin: 0;"><span class="warning-text">{{ result.imported }}/{{ result.totalToImport }}</span> participants importés.</p>

            {% if result.errors %}
                <ul style="margin: 0;">
                    {% for error in result.errors %}
                        <li class="warning-text">{{ error }}</li>
                    {% endfor %}
                </ul>
            {% endif %}
        </div>
    {% endif %}

    <br>

    <h2>Importer des participants</h2>

    <form method="post" enctype="multipart/form-data">
        <input type="file" name="csv_file" accept=".csv" required>
        <button type="submit">Importer</button>
    </form>

</div>
{% endblock %}
