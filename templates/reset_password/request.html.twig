{% extends 'base.html.twig' %}

{% block title %}Réinitialiser votre mot de passe{% endblock %}

{% block body %}
    <div class="container mt-5" style="max-width: 500px;">
        {% for flash_error in app.flashes('reset_password_error') %}
            <div class="alert alert-danger" role="alert">
                {{ flash_error }}
            </div>
        {% endfor %}

        <h2 class="mb-4 text-center">Mot de passe oublié ?</h2>

        <p class="text-muted mb-4 text-center">
            Entrez votre adresse e-mail ci-dessous. Nous vous enverrons un lien pour réinitialiser votre mot de passe.
        </p>

        {{ form_start(requestForm) }}
        <div class="mb-3">
            {{ form_row(requestForm.email) }}
        </div>

        <div class="d-grid">
            <button type="submit" class="btn btn-primary w-100">
                Envoyer le lien de réinitialisation
            </button>
        </div>
        {{ form_end(requestForm) }}
    </div>
{% endblock %}
