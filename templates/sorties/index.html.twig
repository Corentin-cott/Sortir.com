{% block body %}
    <style>
        body {
            margin: 0;
            padding: 0;
            background: #0f0f0f;
            font-family: "Inter", system-ui, -apple-system, sans-serif;
            color: #e5e5e5;
        }

        .container {
            max-width: 1200px;
            margin: 40px auto;
            padding: 0 20px;
        }

        h1 {
            text-align: center;
            font-size: 2.5rem;
            margin-bottom: 30px;
            color: #fff;
        }

        .filters {
            display: flex;
            flex-wrap: wrap;
            gap: 15px;
            margin-bottom: 30px;
            justify-content: center;
        }

        .filters input, .filters select {
            padding: 10px 15px;
            border-radius: 12px;
            border: 1px solid #444;
            background: #1a1a1a;
            color: #e5e5e5;
            min-width: 200px;
        }

        .filters label {
            display: flex;
            align-items: center;
            gap: 5px;
            font-size: 0.95rem;
            color: #c4c4c4;
        }

        table {
            width: 100%;
            border-collapse: collapse;
            background: #1a1a1a;
            border-radius: 12px;
            overflow: hidden;
            box-shadow: 0 10px 30px rgba(0,0,0,0.5);
        }

        thead {
            background: #2a2a2a;
        }

        th, td {
            padding: 12px 15px;
            text-align: center;
            border-bottom: 1px solid #333;
        }

        th {
            font-weight: 600;
            color: #c4c4c4;
        }

        tbody tr:hover {
            background: #333;
            transition: background 0.2s;
        }

        .btn {
            padding: 6px 12px;
            border-radius: 8px;
            border: none;
            cursor: pointer;
            font-weight: 500;
            margin: 2px;
            transition: all 0.2s;
        }

        .btn-view { background: #4c1d95; color: #fff; }
        .btn-edit { background: #7f5af0; color: #fff; }
        .btn-register { background: #10b981; color: #fff; }
        .btn-unregister { background: #f59e0b; color: #fff; }
        .btn-cancel { background: #ef4444; color: #fff; }

        .btn:hover {
            opacity: 0.9;
            transform: translateY(-2px);
        }

        @media(max-width: 768px){
            table, thead, tbody, th, td, tr { display: block; }
            th { text-align: left; }
            td { text-align: right; padding-left: 50%; position: relative; }
            td::before {
                content: attr(data-label);
                position: absolute;
                left: 15px;
                font-weight: 600;
                color: #c4c4c4;
            }
        }
    </style>

    <div class="container">
        <h1>Liste des Sorties</h1>

        <div class="filters">
            <input type="text" id="filter-name" placeholder="Nom contient..." />
            <select id="filter-site">
                <option value="">Tous les sites</option>
                {% for site in sites %}
                    <option value="{{ site }}">{{ site }}</option>
                {% endfor %}
            </select>
            <label><input type="checkbox" id="filter-organisateur" /> Mes sorties (organisateur)</label>
            <label><input type="checkbox" id="filter-inscrit" /> Mes sorties (inscrit)</label>
            <label><input type="checkbox" id="filter-non-inscrit" /> Non-inscrit</label>
            <label><input type="checkbox" id="filter-passees" /> Sorties passées</label>
        </div>

        <table id="table-sorties">
            <thead>
            <tr>
                <th>Nom</th>
                <th>Date</th>
                <th>Clôture</th>
                <th>Inscriptions / Places</th>
                <th>État</th>
                <th>Inscrit</th>
                <th>Organisateur</th>
                <th>Actions</th>
            </tr>
            </thead>
            <tbody>
            {% for sortie in sorties %}
                <tr>
                    <td data-label="Nom">{{ sortie.nom }}</td>
                    <td data-label="Date">{{ sortie.date|date('d/m/Y H:i') }}</td>
                    <td data-label="Clôture">{{ sortie.dateCloture|date('d/m/Y H:i') }}</td>
                    <td data-label="Inscriptions">{{ sortie.nbInscriptions }}/{{ sortie.nbPlaces }}</td>
                    <td data-label="État">{{ sortie.etat }}</td>
                    <td data-label="Inscrit">{{ sortie.inscrit ? 'Oui' : 'Non' }}</td>
                    <td data-label="Organisateur">{{ sortie.organisateur }}</td>
                    <td data-label="Actions">
                        <button class="btn btn-view">Afficher</button>
                        <button class="btn btn-edit">Modifier</button>
                        <button class="btn btn-register">S'inscrire</button>
                        <button class="btn btn-unregister">Se désister</button>
                        <button class="btn btn-cancel">Annuler</button>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>

    <script>
        const filterName = document.getElementById('filter-name');
        const filterSite = document.getElementById('filter-site');
        const filterOrganisateur = document.getElementById('filter-organisateur');
        const filterInscrit = document.getElementById('filter-inscrit');
        const filterNonInscrit = document.getElementById('filter-non-inscrit');
        const filterPassees = document.getElementById('filter-passees');
        const table = document.getElementById('table-sorties').getElementsByTagName('tbody')[0];

        function filterRows() {
            const nameValue = filterName.value.toLowerCase();
            const siteValue = filterSite.value.toLowerCase();
            const orgChecked = filterOrganisateur.checked;
            const inscritChecked = filterInscrit.checked;
            const nonInscritChecked = filterNonInscrit.checked;
            const passeesChecked = filterPassees.checked;
            const rows = table.getElementsByTagName('tr');

            for (let row of rows) {
                const nom = row.cells[0].innerText.toLowerCase();
                const site = row.cells[6].innerText.toLowerCase(); // on suppose site = organisateur pour l'exemple
                const etat = row.cells[4].innerText.toLowerCase();
                const inscrit = row.cells[5].innerText.toLowerCase();

                let show = true;

                if(nameValue && !nom.includes(nameValue)) show = false;
                if(siteValue && !site.includes(siteValue)) show = false;
                if(orgChecked && site != 'monpseudo') show = false; // remplace 'monpseudo' par utilisateur courant
                if(inscritChecked && inscrit != 'oui') show = false;
                if(nonInscritChecked && inscrit != 'non') show = false;
                if(passeesChecked && etat != 'passée') show = false;

                row.style.display = show ? '' : 'none';
            }
        }

        filterName.addEventListener('input', filterRows);
        filterSite.addEventListener('change', filterRows);
        filterOrganisateur.addEventListener('change', filterRows);
        filterInscrit.addEventListener('change', filterRows);
        filterNonInscrit.addEventListener('change', filterRows);
        filterPassees.addEventListener('change', filterRows);
    </script>
{% endblock %}
