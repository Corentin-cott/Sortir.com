{% extends 'base.html.twig' %}

{% block title %}Annuler une sortie{% endblock %}
{% block body %}
<div class="container mt-4">
    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <h1>Annuler une sortie</h1>

                <form method="post" action="{{ path('app_sortie_annuler', {id: sortie.id}) }}">
                    <div>
                        <p>Nom de la sortie :</p>
                        <p style="margin-left: 20px">{{ sortie.nom }}</p>
                        <p>Date de la sortie :</p>
                        <p style="margin-left: 20px">{{ sortie.dateHeureDebut|date('d/m/Y H:i', 'Europe/Paris') }}</p>
                        <p>Site organisateur :</p>
                        <p style="margin-left: 20px">{{ siteOrga.nom }}</p>
                        <p>Lieu :</p>
                        <strong style="margin-left: 20px">
                            {{ lieu.nom }}
                        </strong>
                        <p style="margin-left: 20px">
                            {{ lieu.rue ~ ' ' ~ lieuVille.nom }}
                            <br>
                            {{ lieuVille.codePostal ~ ' ' ~ lieuVille.nom }}
                        </p>
                        <label for="motif">Motif :</label>
                        <textarea id="motif" name="motif" class="form-control" rows="3" required></textarea>
                    </div>

                    <div class="mt-3 d-flex gap-2">
                        <button type="submit" name="action" value="save" class="generic-button bouton-danger-color">Annuler la sortie</button>
                        <a href="/" class="generic-button bouton-light-color">Revenir en arri√®re</a>
                    </div>

                </form>

            </div>
        </div>
    </div>
</div>
{% endblock %}