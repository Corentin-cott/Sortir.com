{% extends 'base.html.twig' %}

{% block title %}Détails de la sortie{% endblock %}
{% block body %}
    <div class="container mt-4">
        <div class="container mt-5">
            <div class="row justify-content-center">
                <div class="col-md-6">
                    <h1>Détails de la sortie</h1>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label>Nom :</label>
                                <input type="text" class="form-control" value="{{ sortie.nom }}" disabled>
                            </div>
                            <div class="mb-3">
                                <label>Date et heure de début :</label>
                                <input type="text" class="form-control" value="{{ sortie.dateHeureDebut|date('d/m/Y H:i') }}" disabled>
                            </div>
                            <div class="mb-3">
                                <label>Date limite d'inscription :</label>
                                <input type="text" class="form-control" value="{{ sortie.dateLimiteInscription|date('d/m/Y') }}" disabled>
                            </div>
                            <div class="mb-3">
                                <label>Nombre de places :</label>
                                <input type="text" class="form-control" value="{{ sortie.nbInscriptionMax }}" disabled>
                            </div>
                            <div class="mb-3">
                                <label>Durée (minutes) :</label>
                                <input type="text" class="form-control" value="{{ sortie.duree }}" disabled>
                            </div>
                            <div class="mb-3">
                                <label>Description :</label>
                                <textarea class="form-control" rows="4" disabled>{{ sortie.descriptionInfos }}</textarea>
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="mb-3">
                                <label>Lieu :</label>
                                <input type="text" class="form-control" value="{{ sortie.lieu.nom }}" disabled>
                            </div>
                            <div id="lieu-details">
                                <p>Rue :</p>
                                <p style="margin-left: 20px"><span>{{ sortie.lieu.rue }}</span></p>
                                <p>Ville :</p>
                                <p style="margin-left: 20px"><span>{{ sortie.lieu.ville.nom }}</span></p>
                                <p>Code postal :</p>
                                <p style="margin-left: 20px"><span>{{ sortie.lieu.ville.codePostal }}</span></p>
                                <p>Latitude :</p>
                                <p style="margin-left: 20px"><span>{{ sortie.lieu.latitude }}</span></p>
                                <p>Longitude :</p>
                                <p style="margin-left: 20px"><span>{{ sortie.lieu.longitude }}</span></p>
                            </div>
                        </div>
                    </div>

                    <div class="mt-3 d-flex gap-2">
                        <a href="/" class="btn btn-light">Retour</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
